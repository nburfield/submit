<% breadcrumb :courses %>
<% content_for :title, "Your Courses" %>

<header>
  <h1>Instructor Actions</h1>
</header>
<div class="content-group">
    <div class="actions">
    <ul>
      <li>
        <%= link_to new_course_url do %>
          <div>
            <%= image_tag('icon_add.png', size: "64x64", alt: "New Course", title: "New Course") %><br>
            New Course
          </div>
        <% end %>
      </li>
    </ul>
  </div>
</div>

<header>
  <h1>Your Taught Courses</h1>
</header>
<div class="content-group">
  <%= render :partial => "course_table", :locals => { :courses => @courses } %>
</div>
