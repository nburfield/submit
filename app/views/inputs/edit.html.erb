<% breadcrumb :input, @input %>
<% content_for :title, "Update Input on run method " + @input.run_method.name %>

<header>
  <h1>Update Input on run method <%= @input.run_method.name %></h1>
</header>
<div class="content-group">
  <%= form_for @input, url: input_url(@input), method: :patch do |f| %>
    <%= f.text_field :name, :placeholder => 'Run Name' %><br>
    <%= f.text_area :description, :placeholder => 'Input Description' %><br>
    <%= f.text_area :data, :placeholder => 'Add Input Text' %><br><br>
    <%= f.label :output_data, "Output of the input data." %><br>
    <%= f.text_area :output, :readonly => true %><br><br>
    <%= f.label :student_visible, "Make Visible for Student Runs " %>
    <%= f.check_box :student_visible, { :checked => @input.student_visible } %><br>
    <%= f.submit "Update" %>
  <% end %>
</div>
