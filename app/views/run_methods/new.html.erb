<% breadcrumb :run_method_new, @test_case %>
<% content_for :title, "Create Run Method" %>

<header>
  <h1>Create Run Method</h1>
</header>
<div class="content-group">
  <%= form_for @run_method, url: new_run_method_url(@test_case), method: :post do |f| %>
    <%= f.text_field :name, :placeholder => 'Run Name' %><br>
    <%= f.text_field :run_command, :placeholder => 'Run Command' %><br>
    <%= f.text_area :description, :placeholder => 'Run Description' %><br>
    <%= f.submit "Create" %>
  <% end %>
</div>
