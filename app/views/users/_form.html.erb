<%= render "shared/error_messages", :target => @user %>

<%= form_for @user do |f| %>
  <%= f.text_field :name, :placeholder => 'Your Name' %>
  <%= f.text_field :email, :placeholder => 'email@example.com' %><br>
  <%= f.password_field :password, :placeholder => 'password' %>
  <%= f.password_field :password_confirmation, :placeholder => 'confirmation password' %>
  <%= f.submit "Register" %>
<% end %>
